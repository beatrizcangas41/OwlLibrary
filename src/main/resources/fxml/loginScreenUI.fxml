<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" cache="true" cacheHint="QUALITY" hgap="5.0" style="-fx-border-color: #ffcc99;
-fx-background-color: radial-gradient(center 50% 50% , radius 180%, #ffece6, #8cd1d1);" vgap="5.0"
          xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controllers.loginScreenController">

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="40.0"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="40.0"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="40.0"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints/>
    </columnConstraints>

    <TextField fx:id="usernameTextField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               nodeOrientation="LEFT_TO_RIGHT" promptText="username"
               style="-fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
               GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
               GridPane.rowIndex="4" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <GridPane.margin>
            <Insets left="60.0" right="50.0"/>
        </GridPane.margin>
    </TextField>
    <PasswordField fx:id="passwordField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   nodeOrientation="LEFT_TO_RIGHT" promptText="password"
                   style="-fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
                   GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
                   GridPane.rowIndex="6" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <GridPane.margin>
            <Insets left="60.0" right="50.0"/>
        </GridPane.margin>
    </PasswordField>


    <Button fx:id="loginButtonPressed" cache="true" cacheHint="QUALITY" defaultButton="true" graphicTextGap="5.0"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#loginButtonPressed"
            prefWidth="155.0"
            style="-fx-background-color: #f49271;             -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
            text="LOGIN" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" GridPane.columnIndex="1"
            GridPane.columnSpan="5" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="8"
            GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <GridPane.margin>
            <Insets left="60.0" right="50.0"/>
        </GridPane.margin>
        <font>
            <Font name="Segoe UI Bold" size="18.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button fx:id="registerButtonPressed" cache="true" cacheHint="QUALITY" graphicTextGap="5.0"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#registerButtonPressed"
            prefWidth="155.0"
            style="-fx-background-color: #008080; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
            text="Register" textAlignment="CENTER" textFill="WHITE" textOverrun="CENTER_ELLIPSIS"
            GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="11"
            GridPane.rowSpan="2" GridPane.valignment="CENTER">
        <font>
            <Font name="Segoe UI Bold" size="14.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <GridPane.margin>
            <Insets bottom="20.0" top="20.0"/>
        </GridPane.margin>
    </Button>
    <ImageView fitHeight="87.0" fitWidth="240.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true"
               GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
               GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <GridPane.margin>
            <Insets right="10.0" top="10.0"/>
        </GridPane.margin>
        <Image url="@../images/logo_transparent_background.png"/>
        <effect>
            <Reflection fraction="0.5" topOffset="-10.0"/>
        </effect>
    </ImageView>
    <ImageView fitHeight="30.0" fitWidth="60.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true"
               GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="6" GridPane.valignment="CENTER">
        <Image url="@../images/password3.png"/>
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
        <effect>
            <ColorAdjust brightness="-0.02" contrast="-0.05" hue="0.13" saturation="0.1"/>
        </effect>
    </ImageView>
    <ImageView fitHeight="30.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1"
               GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="CENTER">
        <Image url="@../images/username3.png"/>
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
        <effect>
            <ColorAdjust brightness="-0.02" contrast="-0.05" hue="0.13" saturation="0.1"/>
        </effect>
    </ImageView>
    <Button fx:id="forgotPasswordButtonPressed" cache="true" cacheHint="QUALITY" graphicTextGap="5.0" layoutX="116.0"
            layoutY="391.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            onAction="#forgotPasswordButtonPressed" prefWidth="155.0"
            style="-fx-background-color: #008080; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
            text="Forgot Password ?" textAlignment="CENTER" textFill="WHITE" textOverrun="CENTER_ELLIPSIS"
            GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="11" GridPane.rowSpan="2">
        <font>
            <Font name="Segoe UI Bold" size="14.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <GridPane.margin>
            <Insets bottom="20.0" top="20.0"/>
        </GridPane.margin>
    </Button>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
    <opaqueInsets>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </opaqueInsets>
</GridPane>
